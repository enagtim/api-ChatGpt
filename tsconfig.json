{
	"compilerOptions": {
		"target": "es6", 
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true, 
		"module": "commonjs",
		"moduleResolution": "node", 
		"outDir": "./dist/src",
		"rootDir": "./src",
		"removeComments": true, 
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true, 
		"strictPropertyInitialization": false, 
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
